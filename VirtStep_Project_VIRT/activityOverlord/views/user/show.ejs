<div class="container">
    <h1><%= user.name %> </h1>
    <% if (user.admin) { %>
      <img src="/images/admin.png" height="60" width="60"> admin
    <% } else { %>
      <img src="/images/user.png" height="60" width="60"> user
    <% } %>
    <h3><%= user.title %></h3>
    <hr>
    <h3> contact: <%- user.email %></h3>

    <a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>

</div>
